generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String?
  avatar   String?

  //profile
  phone       String?
  timezone    String?
  dateOfBirth String?
  gender      String?

  //parmitions
  emailAccess Boolean @default(true)
  phoneAccess Boolean @default(false)
  pushAccess  Boolean @default(false)

  //sequrity
  sessionTimeout            Int?
  passwordExpiry            Int?
  two_factor_authentication Int     @default(0)
  secret                    String?

  type userStatus @default(user)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([email])
  @@map("users")
}

enum userStatus {
  user
  admin
}
